{
  "env": {
    "es2021": true
  },
  "extends": ["google", "plugin:@typescript-eslint/recommended"],
  "ignorePatterns": ["**/*.js"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "valid-jsdoc": [
      "warn",
      {
        "requireReturnType": false,
        "requireParamType": false,
        "requireReturn": false
      }
    ],
    "sort-imports": "warn"
  },
  "root": true
}
